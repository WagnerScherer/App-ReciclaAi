<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/textViewTituloAgendamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agendamento de Coleta"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="#333333"
            android:paddingBottom="16dp" />

        <!-- Campo para selecionar o ponto de coleta -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ponto de Coleta"
            android:paddingBottom="8dp"
            android:textColor="#555555"/>

        <Spinner
            android:id="@+id/spinnerPontoColeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_spinner"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:spinnerMode="dropdown"/>

        <!-- Campo para selecionar a data de coleta -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de Coleta"
            android:paddingBottom="8dp"
            android:textColor="#555555"/>

        <EditText
            android:id="@+id/editTextDataColeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selecionar Data"
            android:background="@drawable/rounded_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:focusable="false"
            android:clickable="true" />

        <!-- Texto de instrução -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marque quais materiais você irá entregar:"
            android:paddingBottom="8dp"
            android:textColor="#555555"/>

        <!-- Checkboxes de materiais em duas colunas -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/checkBoxOleoCozinha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Óleo de Cozinha"
                android:textColor="#333333" />

            <CheckBox
                android:id="@+id/checkBoxPilhasBaterias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilha/Baterias"
                android:textColor="#333333" />

            <CheckBox
                android:id="@+id/checkBoxLampadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lâmpadas"
                android:textColor="#333333" />

            <CheckBox
                android:id="@+id/checkBoxEletronicos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eletrônicos"
                android:textColor="#333333" />
        </GridLayout>

        <!-- Campo para informar o endereço -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço de coleta"
            android:paddingBottom="8dp"
            android:textColor="#555555"/>

        <EditText
            android:id="@+id/editTextEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Endereço"
            android:background="@drawable/rounded_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de texto para observações -->
        <EditText
            android:id="@+id/editTextObservacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observações sobre os itens de coleta"
            android:inputType="textMultiLine"
            android:background="@drawable/rounded_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Botão Agendar -->
        <Button
            android:id="@+id/btnAgendar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Agendar"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            android:background="@drawable/background_botao_moderno"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>
