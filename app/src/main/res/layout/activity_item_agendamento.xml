<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome do usuário -->
        <TextView
            android:id="@+id/textUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Usuário"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <!-- Endereço do usuário -->
        <TextView
            android:id="@+id/textUserAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço do Usuário"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <!-- Data da coleta -->
        <TextView
            android:id="@+id/textDataColeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data da Coleta"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <!-- Materiais coletados -->
        <TextView
            android:id="@+id/textMateriaisColetados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Materiais: Pilhas, Eletrônicos"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Status da coleta -->
        <TextView
            android:id="@+id/textStatusDaColeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Botões para aceitar ou rejeitar a coleta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">


            <!-- Botão Rejeitar com ícone de X -->
            <Button
                android:id="@+id/buttonRejeitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejeitar"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:drawableStart="@drawable/coleta_rejeitada"
                android:drawablePadding="8dp"/>

            <!-- Botão Aceitar com ícone de check -->
            <Button
                android:id="@+id/buttonAceitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aceitar"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/green_modern"
                android:drawableStart="@drawable/coleta_aceita"
                android:drawablePadding="8dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
